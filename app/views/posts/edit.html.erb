<h1 class ="text-center">編輯文章</h1>
<div class ="col-md-4 col-md-offset-4" >
	<%= simple_form_for [@group , @post]  do |f| %>
		<%=f.input :image , :as => :file, :input_html => { :class => "form-control" } %>
		<%=f.input :content ,:as => :ckeditor ,label: '文章內容', placeholder: '文章內容' ,:input_html => { :class => "form-control" ,:ckeditor => {:toolbar => 'Full'} } %>

	<hr>
	 <div class="form-actions">
      <%= f.submit "送出", :disable_with => 'Submiting...', :class => "btn btn-primary"%>

    </div>
    <% end %>
</div>