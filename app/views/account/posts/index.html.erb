<div class="col-md-12">

  <h2 class="text-center"> 我發表過的文章 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 內容 </th>
        <th> 討論版標題 </th>
        <th> 最後修改時間 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td> 
          <td> <%= get_group_title(post.group_id) %> </td> 
          <td> <%= post.updated_at %> </td> 
          <td> <%= link_to('修改', 
                           edit_group_post_path(post.group_id, post), 
                           :class => "btn btn-info btn-xs") %></td>
          <td> <%= link_to('刪除', 
                          group_post_path(post.group_id, post),
                          :method => :delete, 
                          data: { confirm: "你確定刪除此文章?" },
                          :class => "btn btn-danger btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>